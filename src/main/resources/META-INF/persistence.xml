<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
      
    <!-- Define Persistence Unit -->
      
    <persistence-unit name="my_persistence_unit" transaction-type="JTA">
            
        <jta-data-source>java:app/restaurante</jta-data-source>
            
        <class>ues.occ.edu.sv.restaurantebk.tpi.entities.Orden</class>
            
        <class>ues.occ.edu.sv.restaurantebk.tpi.entities.DetalleOrden</class>
            
        <class>ues.occ.edu.sv.restaurantebk.tpi.entities.Producto</class>
            
        <class>ues.occ.edu.sv.restaurantebk.tpi.entities.Usuario</class>
            
        <class>ues.occ.edu.sv.restaurantebk.tpi.entities.Categoria</class>
          
    </persistence-unit>
    
</persistence>
